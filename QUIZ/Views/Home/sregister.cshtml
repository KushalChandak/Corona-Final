@model QUIZ.Models.TBL_STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sregister</title>
    sssss
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />



</head>
<body>
    @if(ViewBag.msg!=null)
    {
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.msg
    </div>
    }

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-8">
                <h2>Student Registeration</h2>
                <div class="container" style="width:40%">
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                @using (Html.BeginForm("sregister","Home",FormMethod.Post,new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="email" style="color:blue">Email:</label>
                        @*<input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                        @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label for="pwd"style="color:blue">Password:</label>
                        @Html.PasswordFor(x => x.S_PASSWORD, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="pwd"style="color:blue">Image:</label>
                       <input type="file"class="form-control btn btn-info" id="imgfile"
                              name="imagefile"/>
                    </div>
                    <input type="submit" value="Register Now!"
                           class="btn  btn-default btn-block"/>
                    <button type="submit" class="btn btn-primary">Submit</button>
                     
                }

            </div>

            <div class="col-lg-4 col-md-4 col-sm-4">

                </div>

            </div>




       

    </div>
        </div>
</body>
</html>
